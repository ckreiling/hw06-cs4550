<h1>Listing Todo items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th>Time spent</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for todo_item <- @todo_items do %>
    <tr>
      <td><%= todo_item.title %></td>
      <td><%= todo_item.description %></td>
      <td><%= todo_item.completed %></td>
      <td><%= todo_item.time_spent %></td>

      <td>
        <%= link "Show", to: Routes.todo_item_path(@conn, :show, todo_item) %>
        <%= link "Edit", to: Routes.todo_item_path(@conn, :edit, todo_item) %>
        <%= link "Delete", to: Routes.todo_item_path(@conn, :delete, todo_item), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Todo item", to: Routes.todo_item_path(@conn, :new) %></span>
